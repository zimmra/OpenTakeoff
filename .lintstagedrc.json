{
  "*.{ts,tsx}": [
    "eslint --fix --max-warnings 0",
    "prettier --write",
    "bash -c 'pnpm vitest related --run --passWithNoTests \"$@\"' _"
  ],
  "*.{js,jsx,mjs,cjs}": ["eslint --fix --max-warnings 0", "prettier --write"],
  "*.{json,md,yml,yaml}": ["prettier --write"],
  "apps/frontend/**/*.{ts,tsx}": ["bash -c 'cd apps/frontend && pnpm tsc --noEmit'"],
  "apps/backend/**/*.{ts,tsx}": ["bash -c 'cd apps/backend && pnpm tsc --noEmit'"]
}
